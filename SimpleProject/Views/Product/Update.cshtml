@using SimpleProject.ViewModels.Products
@model UpdateProductViewModel

<div>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden/>
        <div>
            <label>NameAr</label>
            <input asp-for="NameAr" class="form-control" />
            <span asp-validation-for="NameAr" class="text-danger"></span>
        </div>
        <div>
            <label>NameEn</label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>
        </div>

    <div>
        <label>Price</label>
            <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger" ></span>
    </div>
        <div>
            <label>Current Image</label>
            @foreach(var image in Model.CurrentPaths)
            {
                <img src="@image" alt="Product Image" style="max-width: 50px; max-height: 50px;" />
                <input asp-for="CurrentPaths" hidden />
            }
)
        </div>
         
        <div>
            <label asp-for="Files">File</label>
            <input asp-for="Files" class="form-control" multiple />
            <span asp-validation-for="Files" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>

        </div>
    <div>
            <input type="submit" value="Update" class="btn btn-primary" />
    </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScript");
    }
}