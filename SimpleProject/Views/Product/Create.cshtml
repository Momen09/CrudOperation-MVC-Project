@using SimpleProject.ViewModels.Products
@model AddProductViewModel

<div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="NameAr">NameAr</label>
            <input asp-for="NameAr" class="form-control" />
            <span asp-validation-for="NameAr" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="NameEn">NameEn</label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" value="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Files">File</label>
            <input asp-for="Files" class="form-control" multiple />
            <span asp-validation-for="Files" class="text-danger"></span>

        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>

        </div>
        <div class="md-3">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScript");
    }
}