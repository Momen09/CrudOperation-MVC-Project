@using Microsoft.Extensions.Localization
@using SimpleProject.Resources
@using SimpleProject.ViewModels.Products
@inject IStringLocalizer<SharedResources> _SharedResources;
@model IEnumerable<GetProductListViewModel>


<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>@_SharedResources[SharedResourcesKeys.Price]</td>

        </tr>
    </thead>
    <tbody id="productList">
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                @* <td><img src="@product.Path" alt="NoImage" height="50" width="50"/></td> *@
                <td><a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-info">Details</a></td>
                <td><a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-info">Update</a></td>
                <td><a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
